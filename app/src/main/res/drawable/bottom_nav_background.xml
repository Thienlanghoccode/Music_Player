<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient màu trắng xám mờ lên trắng tinh -->
    <gradient
        android:angle="90"
        android:startColor="#F5F5F5"
        android:endColor="#FFFFFF"
        android:type="linear" />

    <!-- Bo góc -->
    <corners android:radius="20dp" />

    <!-- Padding nhẹ cho mịn -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
